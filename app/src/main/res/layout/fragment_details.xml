<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#C3C3C3"
    android:clickable="true"

    tools:context=".DetailsFragment"
    android:focusable="true">
    <include
        android:id="@+id/includes"
        layout="@layout/toolbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <include
        android:id="@+id/include2"
        layout="@layout/bottom_navigation_bar"
        android:layout_width="412dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="421dp"
        android:layout_height="674dp"
        app:srcCompat="@drawable/splash3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="59dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="617dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="60dp"
        tools:layout_editor_absoluteY="59dp"
        tools:ignore="MissingConstraints">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pic2"
                    android:layout_width="387dp"
                    android:layout_height="222dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:contentDescription="Test"
                    android:scaleType="centerCrop"
                    android:src="@drawable/voiture1" />


                <!-- Buttons -->

                <TextView
                    android:id="@+id/textgouvernerat"
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="26dp"
                    android:fontFamily="@font/arial"
                    android:letterSpacing="0.5"
                    android:text=" Marque"
                    android:textColor="@color/colorPrimaryVariant"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/textPrix"
                    android:layout_width="93dp"
                    android:layout_height="39dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="26dp"
                    android:fontFamily="@font/arial"
                    android:letterSpacing="0.5"
                    android:text="Prix"
                    android:textColor="@color/colorPrimaryVariant"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="93dp"
                    android:layout_height="27dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="26dp"
                    android:fontFamily="@font/arial"
                    android:letterSpacing="0.5"
                    android:text="Date"
                    android:textColor="@color/colorPrimaryVariant"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textGouvernorat"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="26dp"
                    android:fontFamily="@font/arial"
                    android:letterSpacing="0.5"
                    android:text="Gouvernorat"
                    android:textColor="@color/colorPrimaryVariant"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textDescription"
                    android:layout_width="257dp"
                    android:layout_height="138dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="26dp"
                    android:fontFamily="@font/arial"
                    android:letterSpacing="0.5"
                    android:text=" Description"
                    android:textColor="@color/colorPrimaryVariant"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="#B6DD89"
                    android:fontFamily="@font/arial"
                    android:text="Cette annonce date de moin de 7 jours."
                    android:textAllCaps="false"

                    android:textColor="@color/white"

                    />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>